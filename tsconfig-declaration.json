{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": [
      "lua-types/jit",
      "./types/cairo",
      "./types/kui",
      "./types/vim"
    ],
    "paths": {
      "src/*": ["../src/*"],
      "types/*": ["../types/*"]
    },
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
