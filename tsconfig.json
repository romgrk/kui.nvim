{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": [
      "lua-types/jit",
      "./types/cairo",
      "./types/kui",
      "./types/vim"
    ],
    "paths": {
      "src/*": ["../src/*"],
      "types/*": ["../types/*"]
    },
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "tstl": {
    "luaTarget": "JIT",
    "luaBundle": "./lua/kui.lua",
    "luaBundleEntry": "./src/index.ts",
    "noResolvePaths": [
      "bit",
      "kui.cairo.cairo",
      "kui.legacy.api",
      "kui.legacy.image"
    ]
  }
}
